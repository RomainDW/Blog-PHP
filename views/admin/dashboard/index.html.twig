{% extends "admin/base.html.twig" %}

{% block title %}
    Dashboard
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css"/>
{% endblock %}

{% block main %}

    <!-- START BLOG CONFIGURATION -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex justify-content-between align-items-center mb-5">
                    <h4 class="header-title mb-0">Configuration du blog</h4>
                </div>

                <div>

                    <!-- Notifications -->
                    {{ message.display }}

                    <!-- Posts per page -->
                    <form class="form-inline" method="post" action="?c=adminDashboard&t=editConfig">
                        <div class="form-group">
                            <label for="ppp">Nombre d'article par page</label>
                            <input type="number" id="ppp" name ="ppp" class="form-control mx-sm-3" value="{{ config }}">
                        </div>
                        <input type="submit" class="btn btn-primary" name="edit_config" value="Enregistrer">
                    </form>

                </div>
            </div>
        </div>
    </div>
    <!-- END BLOG CONFIGURATION -->

    <!-- START USERS CONFIGURATION -->
    <div class="col-12 mt-5">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex justify-content-between align-items-center mb-5">
                    <h4 class="header-title mb-0">Gestion des utilisateurs</h4>
                </div>

                <div>

                    <!-- Notifications -->
                    {{ message.display }}

                    <!-- List of users -->
                    <table id="list-posts" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.name }}</td>
                                <td>{{ user.email }}</td>
                                <td>{% if user.role == 1 %}Admin{% else %}Utilisateur{% endif %}</td>
                                <td>
                                    <form method="post" action="?c=adminDashboard&t=updateUser" class="update-user d-inline-block">
                                        {% if user.role == 1 %}
                                            <input type="hidden" name="userDown" value="{{ user.id }}">
                                            <button type="submit"
                                                    class="btn btn-secondary"
                                                    onclick="return confirm('Descendre au rang d\'utilisateur ?');"
                                                    title="Downgrade">
                                                <i class="fa fa-arrow-down"></i>
                                            </button>
                                        {% else %}
                                            <input type="hidden" name="userUp" value="{{ user.id }}">
                                            <button type="submit"
                                                    class="btn btn-primary"
                                                    onclick="return confirm('Monter au rang d\'administrateur ?');"
                                                    title="Upgrade">
                                                <i class="fa fa-arrow-up"></i>
                                            </button>
                                        {% endif %}
                                    </form>
                                    <form method="post" action="?c=adminDashboard&t=removeUser" class="remove-user d-inline-block">
                                        <input type="hidden" name="remove" value="{{ user.id }}">
                                        <button type="submit"
                                                class="btn btn-danger"
                                                onclick="return confirm('Supprimer l\'utilisateur ?');"
                                                title="Supprimer">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    <!-- END USERS CONFIGURATION -->


{% endblock %}

{% block js %}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.js"></script>
    <script src="assets/js/vendor/dataTables.js"></script>
{% endblock %}