{% extends "admin/base.html.twig" %}

{% block title %}
    Dashboard
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css"/>
{% endblock %}

{% block main %}

    <div class="col-6 mb-3">
        <!-- Notifications -->
        {{ message.display }}
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <!-- BLOG CONFIGURATION -->
                {% include 'admin/dashboard/_partials/config.html.twig' %}

            </div>
        </div>
    </div>
    <!-- END BLOG CONFIGURATION -->

    <div class="col-12 mt-5">
        <div class="card">
            <div class="card-body">

                <!-- USERS MANAGEMENT -->
                {% include 'admin/dashboard/_partials/users.html.twig' %}

            </div>
        </div>
    </div>
    <!-- END USERS CONFIGURATION -->


{% endblock %}

{% block js %}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.js"></script>
    <script src="assets/js/vendor/dataTables.js"></script>
{% endblock %}