{% extends "base-admin.html.twig" %}

{% block title %}
Ajout d'un article
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="assets/css/form-grid.css">
{% endblock %}

{% block main %}
    <main class="form-grid">
        {% if message.success %}
            <div class="alert alert-success" role="alert">
                {{ message.success }}
            </div>
        {% endif %}
        {% if message.error %}
            <div class="alert alert-danger" role="alert">
                {{ message.error }}
            </div>
        {% endif %}
        <form method="post" action="?c=adminBlog&t=create" enctype="multipart/form-data" id="form-create">

            <div class="left">
                <div class="form-group">
                    <label for="formGroupExampleInput">Titre</label>
                    <input type="text" class="form-control" name="title" id="formGroupExampleInput">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Chapô</label>
                    <textarea class="form-control" name="subtitle" id="exampleFormControlTextarea1" rows="2"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlFile1">Image (1500x600 recommandé)</label>
                    <input type="file" class="form-control-file" name="image" id="exampleFormControlFile1">
                </div>
                <div class="form-check">
                    <input type="checkbox" name="active" class="form-check-input" id="exampleCheck1" value="1">
                    <label class="form-check-label" for="exampleCheck1">Mettre en ligne</label>
                </div>
            </div>

            <div class="right">
                <div class="form-group d-flex">
                    <label for="exampleFormControlTextarea1">Contenu</label>
                    <textarea class="form-control" name="content" id="exampleFormControlTextarea1"></textarea>
                </div>
            </div>

        </form>

        <div class="d-flex justify-content-end submit-form">
            <button type="submit" form="form-create" class="btn btn-success">Envoyer</button>
        </div>


    </main>
{% endblock %}